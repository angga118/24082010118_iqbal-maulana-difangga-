package com.mycompany.diskon;
import java.util.Scanner;
public class Diskon {

    public static void main(String[] args) {
       
        Scanner input = new Scanner(System.in);
        int pilihanMenu, pilihanSubmenu, jumlah;
        double harga = 0, totalBiaya = 0;
        char member;

        System.out.println("=== Warung Sederhana ===");
        System.out.println("1. Sate");
        System.out.println("2. Pecel");
        System.out.println("3. Penyetan");
        System.out.println("Pilih menu utama (1-3): ");
        pilihanMenu = input.nextInt();

        switch (pilihanMenu) {
            case 1:
                System.out.println("1. Sate Ayam (Rp 1.500 per tusuk)");
                System.out.println("2. Sate Kambing (Rp 3.000 per tusuk)");
                System.out.print("Pilih jenis sate (1-2): ");
                pilihanSubmenu = input.nextInt();

                if (pilihanSubmenu == 1) {
                    harga = 1500;
                } else if (pilihanSubmenu == 2) {
                    harga = 3000;
                } else {
                    System.out.println("Pilihan tidak valid");
                    return;
                }
                break;

            case 2:
                System.out.println("1. Pecel dengan Lauk Ayam (Rp 13.000 per porsi)");
                System.out.println("2. Pecel dengan Lauk Empal (Rp 15.000 per porsi)");
                System.out.print("Pilih jenis pecel (1-2): ");
                pilihanSubmenu = input.nextInt();

                if (pilihanSubmenu == 1) {
                    harga = 13000;
                } else if (pilihanSubmenu == 2) {
                    harga = 15000;
                } else {
                    System.out.println("Pilihan tidak valid");
                    return;
                }
                break;

            case 3:
                System.out.println("1. Penyetan dengan Tahu/Tempe (Rp 5.000 per porsi)");
                System.out.println("2. Penyetan dengan Telur (Rp 7.000 per porsi)");
                System.out.println("3. Penyetan dengan Ayam (Rp 10.000 per porsi)");
                System.out.print("Pilih jenis penyetan (1-3): ");
                pilihanSubmenu = input.nextInt();

                switch (pilihanSubmenu) {
                    case 1:
                        harga = 5000;
                        break;
                    case 2:
                        harga = 7000;
                        break;
                    case 3:
                        harga = 10000;
                        break;
                    default:
                        System.out.println("Pilihan tidak valid");
                        return;
                }
                break;

            default:
                System.out.println("Menu tidak tersedia.");
                return;
        }

        // Meminta jumlah yang dibeli
        System.out.print("Masukkan jumlah yang dibeli: ");
        jumlah = input.nextInt();
        totalBiaya = harga * jumlah;

        // Memeriksa apakah pelanggan memiliki kartu member
        System.out.print("Apakah Anda memiliki kartu member? (y/n): ");
        member = input.next().charAt(0);

        if (member == 'y' || member == 'Y') {
            totalBiaya = totalBiaya * 0.95; // Diskon 5%
        }

        System.out.printf("Total biaya yang harus dibayar: Rp %.2f%n", totalBiaya);
        input.close();
    }
}
        
    

